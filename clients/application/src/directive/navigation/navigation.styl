@import "../../variables.styl"

.sidemenu
  width 190px
  float left
  position fixed
  top 103px

  select
    display block
    width 100%
    margin-bottom 20px
    padding 12px 17px
    border-radius $border-radius
    border-color $body-color
    &:focus
      outline none !important
  .btn
    display block
    border-radius $border-radius
    margin-bottom 10px
    padding 12px 25px
    &:active
      box-shadow inset 0 2px 0 rgba(0,0,0,0.15)
    &-info
      background-color $m-brand-blue-light
      color #fff
      &:hover, &:focus
        background-color #1e8bbd
    &-success
      background-color $brand-success
      color #fff
      &:hover, &:focus
        background-color #8bad24
    &-default
      background-color rgba(5, 127, 203, 0.1)
      color $text-color
      &:hover, &:focus
        background-color rgba(5, 127, 203, 0.15)

  ul
    background-color #fff
    padding-left 0
    list-style none
    margin 0 0 20px 0
    overflow hidden
    border-radius $border-radius

    li
      &:last-child a
        border-bottom none

    a
      padding 12px 25px
      display block
      border-bottom 1px solid $body-color
      color: $text-color
      &:hover
        background-color rgba(5, 127, 203, 0.1)
        &:before
          content '< / >'
          float right
      &.active
        color: #fff
        background-color $m-brand-blue-light
        &:before
          content '< / >'
          float right
